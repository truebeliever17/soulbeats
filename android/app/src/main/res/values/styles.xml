<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Custom.TextView</item>
        <item name="textAppearanceButton">@style/Custom.Button.TextAppearance</item>
        <item name="shapeAppearanceSmallComponent">@style/Custom.ShapeAppearance.Small</item>
    </style>

    <style name="Custom.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
    </style>

    <style name="Custom.Button.TextAppearance" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sf_pro_bold</item>
        <item name="android:fontFamily">@font/sf_pro_bold</item>
    </style>

    <style name="Custom.ShapeAppearance.Small" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/corner_radius_small</item>
    </style>

    <style name="Custom.ShapeAppearance.Normal" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/corner_radius_normal</item>
    </style>

    <style name="Custom.ShapeAppearance.Medium" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">@dimen/corner_radius_medium</item>
    </style>

    <style name="Custom.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@color/acadia</item>
        <item name="hintTextColor">@color/dove_gray</item>
        <item name="endIconTint">@color/gray</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxCornerRadiusTopEnd">4dp</item>
        <item name="boxCornerRadiusTopStart">4dp</item>
        <item name="android:textColorHint">@color/boulder</item>
    </style>





</resources>